From 1ac056bdd30475566dcf630a55aae7cdd9eb81eb Mon Sep 17 00:00:00 2001
From: Elliott Sales de Andrade <quantum.analyst@gmail.com>
Date: Wed, 19 Aug 2020 22:44:11 -0400
Subject: [PATCH 1/5] Relax some test requirements.

Signed-off-by: Elliott Sales de Andrade <quantum.analyst@gmail.com>
---
 pyproject.toml        | 2 +-
 requirements/test.txt | 6 +++---
 setup.py              | 4 ++--
 3 files changed, 6 insertions(+), 6 deletions(-)

diff --git a/pyproject.toml b/pyproject.toml
index 0b71084..e324468 100644
--- a/pyproject.toml
+++ b/pyproject.toml
@@ -4,7 +4,7 @@ requires = [
   "wheel",
   "setuptools_scm",
   "setuptools_scm_git_archive",
-  "pybind11 >= 2.3.0, < 2.6.0"
+  "pybind11 >= 2.3.0"
 ]
 build-backend = "setuptools.build_meta"
 
diff --git a/requirements/test.txt b/requirements/test.txt
index e78ce18..1abc2c7 100644
--- a/requirements/test.txt
+++ b/requirements/test.txt
@@ -1,9 +1,9 @@
 attrs >= 19.1.0
-hypothesis >= 4.24, < 6
+hypothesis >= 4.23.8, < 6
 Pillow >= 5.0.0
 psutil >= 5
-pytest >= 4.4.0, < 5.3.5
-pytest-xdist >= 1.28, < 2
+pytest >= 4.4.0, < 7
+pytest-xdist >= 1.28, < 3
 pytest-helpers-namespace >= 2019.1.8
 pytest-timeout >= 1.3.3
 python-xmp-toolkit >= 2.0.1 ; sys_platform != "nt"
diff --git a/setup.py b/setup.py
index 63e3cdf..af3158e 100644
--- a/setup.py
+++ b/setup.py
@@ -170,11 +170,11 @@ if __name__ == '__main__':  # for mp_compile
         extras_require={'docs': docs_require},
         cmdclass={'build_ext': BuildExt},
         zip_safe=False,
-        python_requires='>=3.5, <3.9',
+        python_requires='>=3.5',
         setup_requires=[
             'setuptools_scm',
             'setuptools_scm_git_archive',
-            "pybind11 >= 2.4.3, < 2.6.0 ; python_version < '3.9'",
+            "pybind11 >= 2.4.3",
         ],
         use_scm_version=True,
         tests_require=tests_require,
-- 
