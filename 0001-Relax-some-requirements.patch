From: Elliott Sales de Andrade <quantum.analyst@gmail.com>
Date: Wed, 23 Dec 2020 05:26:27 -0500
Subject: [PATCH] Relax some requirements.

Signed-off-by: Elliott Sales de Andrade <quantum.analyst@gmail.com>
---
 pyproject.toml        | 1 -
 requirements/test.txt | 3 +--
 setup.py              | 1 -
 3 files changed, 1 insertion(+), 4 deletions(-)

diff --git a/pyproject.toml b/pyproject.toml
index a1a12f8..f7daa22 100644
--- a/pyproject.toml
+++ b/pyproject.toml
@@ -4,7 +4,6 @@ requires-python = ">=3.6"
 [build-system]
 requires = [
   "setuptools >= 50",
-  "wheel >= 0.35",
   "setuptools_scm[toml] >= 4.1",
   "setuptools_scm_git_archive",
   "pybind11 >= 2.6.0, < 3"
diff --git a/requirements/test.txt b/requirements/test.txt
index 54b3da1..eee8b2f 100644
--- a/requirements/test.txt
+++ b/requirements/test.txt
@@ -1,10 +1,9 @@
 attrs >= 20.2.0
-hypothesis >= 5, < 6
+hypothesis >= 5, < 7
 Pillow >= 7, < 9
 psutil >= 5, < 6
 pybind11 >= 2.6.0
 pytest >= 6, < 7
-pytest-cov >= 2.10.1, < 3
 pytest-xdist >= 1.28, < 3
 pytest-timeout >= 1.4.2
 python-dateutil >= 2.8.0
diff --git a/setup.py b/setup.py
index 8810b81..2be4acc 100644
--- a/setup.py
+++ b/setup.py
@@ -89,7 +89,6 @@ if __name__ == '__main__':
         ],
         setup_requires=[
             'setuptools >= 50',
-            'wheel >= 0.35',
             'setuptools_scm[toml] >= 4.1',
             'setuptools_scm_git_archive',
             'pybind11 >= 2.6.0, <3',
